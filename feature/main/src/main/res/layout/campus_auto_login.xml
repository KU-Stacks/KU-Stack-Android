<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/campus_iv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="60dp"
        android:src="@drawable/ic_campus_man"
        app:layout_constraintBottom_toTopOf="@+id/campus_next_bt"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/campus_description_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/sfpro_display_regular"
        android:gravity="center_horizontal"
        android:text="@string/campus_ask_send_message"
        android:textColor="@color/kus_primary"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/campus_iv" />

    <Button
        android:id="@+id/campus_next_bt"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_primary_gradation"
        android:fontFamily="@font/sfpro_display_regular"
        android:gravity="center"
        android:text="@string/start"
        android:textColor="@color/kus_background"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>