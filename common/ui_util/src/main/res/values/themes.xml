<resources>
    <!-- Base application theme. -->
    <style name="Theme.KURing" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/kus_background</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorPrimary">@color/kus_label_green</item>
        <item name="colorPrimaryVariant">@color/kus_label_green</item>
        <item name="android:windowBackground">@color/kus_background</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimaryDark">@color/kus_green</item>
        <item name="android:windowBackground">@color/kus_green</item>
        <item name="android:navigationBarColor">@color/kus_green</item>
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/notosanskr_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="OpenSourceMenuTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimaryDark">@color/kus_primary</item>
        <item name="colorPrimary">@color/kus_green</item>
        <item name="colorPrimaryVariant">@color/kus_background</item>
        <item name="colorOnPrimary">@color/kus_background</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/kus_green</item>
        <item name="colorOnSecondary">@color/kus_primary</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/kus_background</item>
        <item name="android:windowLightStatusBar">true</item>

        <!--    actionbar nav icon    -->
        <item name="navigationIcon">@drawable/ic_close</item>
        <item name="toolbarNavigationButtonStyle">@style/Toolbar.Button.Navigation.Tinted</item>
    </style>

    <style name="OpenSourceItemTheme" parent="OpenSourceMenuTheme">
        <item name="android:windowAnimationStyle">@style/OpenSourceItemAnimation</item>

        <!--    actionbar nav icon    -->
        <item name="navigationIcon">@drawable/ic_back</item>
        <item name="toolbarNavigationButtonStyle">@style/Toolbar.Button.Navigation.Tinted</item>
    </style>

    <style name="Toolbar.Button.Navigation.Tinted" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="tint">@color/kus_background</item>
    </style>

    <style name="OpenSourceItemAnimation">
        <item name="android:activityOpenEnterAnimation">@anim/anim_slide_right_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/anim_slide_right_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/anim_slide_left_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/anim_slide_left_exit</item>
    </style>

    <style name="EditSubscriptionTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimaryDark">@color/kus_green</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="colorPrimary">@color/kus_green</item>
        <item name="colorPrimaryVariant">@color/kus_label_green</item>
    </style>

    <!--  Staff BottomSheet  -->
    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_staff_bottom_sheet</item>
    </style>

    <!--  MainActivity BottomNavigationView  -->
    <style name="BottomNavigationView">
        <item name="itemTextAppearanceActive">@style/TextAppearance.BottomNavigationView.Active</item>
        <item name="itemTextAppearanceInactive">@style/TextAppearance.BottomNavigationView.Inactive</item>
    </style>

    <!-- blank styles for better code readability-->
    <style name="TextAppearance"/>
    <style name="TextAppearance.BottomNavigationView"/>

    <!-- inactive tab icon style -->
    <style name="TextAppearance.BottomNavigationView.Inactive">
        <item name="android:textSize">10sp</item>
    </style>

    <!-- active tab icon style -->
    <style name="TextAppearance.BottomNavigationView.Active">
        <item name="android:textSize">10sp</item>
    </style>

</resources>